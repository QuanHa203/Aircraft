<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.example.aircrafttx.view.JoystickView
                android:id="@+id/joystickLeft"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="32dp"
                app:layout_constraintLeft_toLeftOf="@id/ConstraintLayout1"
                app:layout_constraintBottom_toBottomOf="@id/ConstraintLayout1"/>

            <com.example.aircrafttx.view.JoystickView
                android:id="@+id/joystickRight"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="32dp"
                app:layout_constraintRight_toRightOf="@id/ConstraintLayout1"
                app:layout_constraintBottom_toBottomOf="@id/ConstraintLayout1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>